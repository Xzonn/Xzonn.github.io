[{% for post in site.posts %}{"title":{{ post.title | jsonify }},"link":"{{ post.url }}","date":"{{ post.date | date : "%Y-%m-%d" }}","update":"{% if post.update %}{{ post.update | date : "%Y-%m-%d" }}{% else %}{{ post.date | date : "%Y-%m-%d" }}{% endif %}","headImage":{{ post.headImage | jsonify }},"info":{% if post.info %}{{ post.info | jsonify }}{% else %}{{ post.content | strip_html | remove: "$" | truncate: 100, "……" | jsonify }}{% endif %},"wechatLink":{{ wechatLink | jsonify }},"tags":{{ post.tags | jsonify }}}{% unless forloop.last %},{% endunless %}{% endfor %}]